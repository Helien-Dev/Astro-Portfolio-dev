---
import Header from '../components/Header.astro'
interface Props {
    pagTitle: string
    pagDescription: string
}

const { pagTitle, pagDescription } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={pagDescription}>
    <title>{pagTitle}</title>
</head>
<body class="h-full w-full [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]">
    <Header>
	</Header>
	<main class="main-distance">
		<slot>
	</main>
</body>
</html>

<style is:global>
:root {
	color-scheme: light dark;
}

body {
    font-family: 'Onest Variable', sans-serif;
    background-color: #121212;
    color: rgb(255, 255, 255);
	min-height: 100vh;
	box-sizing: border-box;
}

.main-distance {
    padding-top: 122px;
    padding-bottom: 22px;
}

</style>