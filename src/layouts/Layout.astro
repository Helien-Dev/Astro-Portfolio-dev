---
interface Props {
    pagTitle: string
    pagDescription: string
}

const { pagTitle, pagDescription } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={pagDescription}>
    <title>{pagTitle}</title>
</head>
<body class="h-full w-full [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]">
    <header>
        <nav class="navbar ">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About me</a></li>
                <li><a href="/">Services</a></li>
                <li><a href="/">Experience & projects</a></li>
                <li><a href="/">Contact me</a></li>
            </ul>
        </nav>
    </header>
	<main class="main-distance">
		<slot>
	</main>
</body>
</html>

<style is:global>
	body {
		font-family: 'Onest Variable', sans-serif;
		background-color: #121212;
		color: rgb(255, 255, 255);
	}

	header {
		background-color: #202020;
		padding: 18px ;
		border-radius: 10px;
		width: 100%;
		position: fixed;
		z-index: 1000;
	}

	.navbar {
		font-weight: bold;
		text-align: center;
		margin: 0;
		padding: 0;
		list-style-type: none;
	}

	.navbar ul {
		display: inline-block;
	}

	.navbar li {
		display: inline;
	}

	.navbar a {
		color: #fcfcfc;
		margin: 15px;
	}

	.navbar a:hover {
		background-color: rgb(79, 70, 229);
		color: white;
		padding: 10px;
		border-radius: 5px;
		cursor: pointer;
	}

	.main-distance {
		padding-top: 122px;
		padding-bottom: 22px;
	}

	

</style>